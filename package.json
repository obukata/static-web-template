{
  "name": "static-web-template",
  "version": "1.1.0",
  "description": "",
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "dev": "run-p watch:postcss watch:dev",
    "build": "run-s build:markuplint build:eslint build:postcss build:stylelint build:reset build:copy delete:all build:imagemin build:prettier watch:build",
    "watch:postcss": "postcss src/assets/_postcss/main.css -o src/assets/styles/main.css --watch",
    "watch:dev": "browser-sync start --server 'src' --watch 'src/**/*'",
    "watch:build": "browser-sync start --server 'dist' --watch 'dist/**/*'",
    "build:reset": "rimraf dist",
    "build:copy": "cpx 'src/**/*' 'dist'",
    "delete:all": "run-s delete:pattern1 delete:pattern2 delete:pattern3 delete:pattern4",
    "delete:pattern1": "rimraf -g dist/**/_*",
    "delete:pattern2": "rimraf -g dist/**/_*.*",
    "delete:pattern3": "rimraf -g dist/_*",
    "delete:pattern4": "rimraf -g dist/_*.*",
    "build:imagemin": "node imagemin.mjs --initial",
    "build:postcss": "postcss src/assets/_postcss/main.css -o src/assets/styles/main.css",
    "build:markuplint": "markuplint src/**/*.html",
    "build:eslint": "eslint src/**/*.js --fix",
    "build:stylelint": "stylelint src/**/*.css --fix",
    "build:prettier": "prettier dist --write"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@tailwindcss/typography": "^0.5.9",
    "autoprefixer": "^10.4.2",
    "browser-sync": "^2.27.7",
    "cpx": "^1.5.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "imagemin-cli": "^7.0.0",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^10.0.1",
    "imagemin-webp": "^8.0.0",
    "markuplint": "^3.6.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.6",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.0.2",
    "postcss-inline-svg": "^5.0.0",
    "postcss-mixins": "^9.0.1",
    "postcss-preset-env": "^7.8.3",
    "postcss-simple-vars": "^6.0.3",
    "prettier": "^2.8.7",
    "prettier-eslint": "^15.0.1",
    "prettier-eslint-cli": "^7.1.0",
    "prettier-plugin-tailwindcss": "^0.2.5",
    "rimraf": "^4.1.2",
    "stylelint": "^15.10.2",
    "stylelint-config-standard": "^34.0.0",
    "tailwindcss": "^3.0.22",
    "tailwindcss-font-size": "^1.0.0"
  }
}